{{#if toc }}

  {{#each toc }}
    <div class="l0">

      {{#if ../onepager}}

      <a class="subsection-title" href="#{{id}}" class="treeitem">{{text}}</a>

      {{else}}

      <a class="subsection-title" href="/{{ ../../../base_url }}{{@../../key}}/{{id}}">{{text}}</a>

      {{/if}}

      {{#if this.children }}

        <div class="l1">

          {{#each this.children }}

            <a href="#{{id}}" class="treeitem">{{text}}</a>

            {{#if this.children }}
              <div class="l2">

                {{#each this.children }}

                  <a href="#{{id}}" class="treeitem">{{text}}</a>

                {{/each}}

              </div>
            {{/if}}

          {{/each}}

        </div>
      {{/if}}
    </div>

  {{/each}}

{{/if}}